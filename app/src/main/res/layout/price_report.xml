<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="40dp"
    android:background="@drawable/snipper1"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginTop="3dp"
    >
    <TextView
        android:id="@+id/txt_store_id_price"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:layout_marginTop="0dp"
        android:layout_marginStart="5dp"
        android:background="@drawable/rectangle"
        android:gravity="center_vertical|center"
        android:text="13"
        android:layout_gravity="center"
        android:textColor="@android:color/white"
        android:textSize="10sp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/txt_store_name_price"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginStart="2dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="SAZONADOR COMPLETO  GIGANTE X 42 SBS"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:text="20"
                    android:id="@+id/ranking"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:gravity="center_vertical"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="105dp"
                    />

                <EditText
                    android:layout_width="37dp"
                    android:layout_height="match_parent"
                    android:hint="-"
                    android:id="@+id/value_ventas_price"
                    android:textSize="10dp"
                    android:textAlignment="center"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="65dp"
                    android:inputType="numberDecimal"
                    />

                <CheckBox
                    android:id="@+id/validado_price_this"
                    android:layout_marginTop="5dp"
                    android:layout_width="35dp"
                    android:gravity="center_horizontal"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="20dp"
                    android:checked="false" />
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>

