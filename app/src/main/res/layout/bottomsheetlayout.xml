<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialogbkg"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:id="@+id/cal"
        android:layout_height="wrap_content">
    <ImageView
        android:layout_width="70dp"
        android:id="@+id/cancelButton2"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_remove"
        android:layout_gravity="center|top"
        android:scaleType="centerCrop"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/createText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="viewStart"
            android:text="Registro"
            android:padding="8dp"
            android:textColor="@color/lavender"
            android:layout_marginStart="12dp"
            android:textSize="18dp"
            android:textStyle="bold"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_clear"
                android:layout_marginEnd="0dp"
                android:layout_marginTop="8dp"
                android:layout_alignParentEnd="true"
                android:id="@+id/cancelButton"
                />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="11dp"
        android:background="#DEE4E4"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Motivo"
            android:textStyle="bold"
            android:textSize="8dp"
            android:layout_gravity="center"
            android:layout_marginEnd="20dp"
            android:gravity="end"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:orientation="horizontal"
            android:layout_marginBottom="2dp"
            android:gravity="center"
            >

            <LinearLayout
                android:id="@+id/txt_cobranza"
                android:orientation="horizontal"
                android:layout_width="140dp"
                android:layout_height="27dp"
                android:paddingLeft="10dp"
                android:layout_marginTop="5dp"


                android:paddingRight="10dp"
                android:background="@drawable/snipperg"
                >
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:src="@drawable/salarios"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="𝐂𝐨𝐛𝐫𝐚𝐧𝐳𝐚"
                    android:layout_marginTop="5dp"
                    android:textColor="#0D47A1"
                    android:layout_marginLeft="10dp"
                    android:textSize="12sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/txt_deposito"
                android:orientation="horizontal"
                android:layout_width="140dp"
                android:layout_height="27dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginStart="10dp"
                android:paddingTop="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/snipperp"
                android:paddingBottom="7dp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_marginTop="-5dp"
                    android:layout_height="25dp"
                    android:src="@drawable/caridad"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="𝐃𝐞𝐩𝐨́𝐬𝐢𝐭𝐨"
                    android:textColor="#0D47A1"
                    android:layout_marginLeft="10dp"
                    android:textSize="12sp"/>
            </LinearLayout>
        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:orientation="horizontal"
            android:gravity="center"
            >

            <LinearLayout
                android:id="@+id/txt_entrega_pedido"
                android:orientation="horizontal"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:background="@drawable/snippers"
                android:paddingBottom="5dp">


                <ImageView
                    android:layout_width="35dp"
                    android:layout_marginTop="3dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="0dp"
                    android:src="@drawable/entrega"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="𝐄𝐧𝐭𝐫𝐞𝐠𝐚 /𝐏𝐞𝐝𝐢𝐝𝐨"
                    android:textColor="#0D47A1"
                    android:layout_marginTop="7dp"
                    android:layout_marginStart="-5dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="12sp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/txt_inve_pedido"
                android:orientation="horizontal"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginStart="10dp"
                android:paddingBottom="5dp"
                android:background="@drawable/snipperv"
                >
                <ImageView
                    android:layout_width="35dp"
                    android:layout_marginTop="2dp"
                    android:layout_height="25dp"
                    android:src="@drawable/inventario"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="𝐈𝐧𝐯 /𝐏𝐞𝐝𝐢𝐝𝐨"
                    android:textColor="#0D47A1"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="12sp"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="11dp"
        android:layout_marginTop="5dp"
        android:background="#DEE4E4"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Local"
            android:textStyle="bold"
            android:textSize="8dp"
            android:layout_gravity="center"
            android:gravity="end"
            android:layout_marginEnd="20dp"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        >
        <ListView
            android:id="@+id/myListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="𝐌𝐎𝐓𝐈𝐕𝐎:"
            android:textSize="12dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/txtmotivo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="######"
            android:textSize="12dp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/txt_super"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Local: "
            android:textSize="12dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/txtlocal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="##############"
            android:layout_marginStart="10dp"
            android:textSize="12dp"
            />
        <TextView
            android:id="@+id/txtsucursal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="######"
            android:textSize="12dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="11dp"
        android:layout_marginTop="5dp"
        android:background="#DEE4E4"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Resumen"
            android:textStyle="bold"
            android:textSize="8dp"
            android:layout_gravity="center"
            android:gravity="end"
            android:layout_marginEnd="20dp"
            />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/btn"
            android:layout_width="130dp"
            android:layout_height="35dp"
            android:text="REGISTRAR"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="10sp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:background="@color/white" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal">
    </LinearLayout>

</LinearLayout>