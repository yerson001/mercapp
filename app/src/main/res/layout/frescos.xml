<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="40dp"
    android:background="@drawable/snipper1"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginTop="3dp"
    >

    <TextView
        android:id="@+id/txt_store_id"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="0dp"
        android:layout_marginStart="5dp"
        android:background="@drawable/rectangle"
        android:gravity="center_vertical|center"
        android:text="13"
        android:layout_gravity="center"
        android:textColor="@android:color/white"
        android:textSize="10sp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/txt_store_name"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="2dp"
            android:text="SAZONADOR COMPLETO  GIGANTE X 42 SBS"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="8dp"
            android:maxLines="2"
            android:ellipsize="end"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:id="@+id/btn_menos"
                    android:src="@drawable/baseline_indeterminate_check_box_24"
                    android:background="@android:color/transparent"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="135dp" />
        <EditText
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:hint="0"
            android:id="@+id/value_count"
            android:textSize="15dp"
            android:textAlignment="center"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="100dp"
            android:inputType="number"
            />

                <ImageButton
                    android:id="@+id/btn_add"
                    android:layout_width="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="70dp"
                    android:layout_marginRight="67dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/baseline_add_box_24"
                    />

                <EditText
                    android:layout_width="37dp"
                    android:layout_height="match_parent"
                    android:hint="s/."
                    android:id="@+id/value_ventas"
                    android:textSize="10dp"
                    android:textAlignment="center"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="35dp"
                    android:inputType="numberDecimal"
                    />

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:id="@+id/venta"
                    android:text="S/."
                    android:textStyle="bold"
                    android:textSize="10dp"
                    android:textColor="@color/red"
                    android:layout_marginTop="20dp"
                    android:textAlignment="center"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="165dp"
                    android:inputType="numberDecimal"
                />

                <CheckBox
                    android:id="@+id/validado"
                    android:layout_marginTop="5dp"
                    android:layout_width="35dp"
                    android:gravity="center_horizontal"
                    android:layout_height="35dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="0dp"
                    android:checked="false" />
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
