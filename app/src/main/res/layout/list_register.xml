<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    android:orientation="horizontal"
    android:layout_height="170dp"
    android:layout_marginTop="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:background="@drawable/snipper">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="25dp"
            android:layout_height="160dp"
            android:id="@+id/id_txt_r"
            android:text="1200"
            android:gravity="center_vertical|center"
            android:textSize="10sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/rectangle"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginStart="10dp"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" ▶ "
                android:textStyle="bold"
                android:textSize="25dp"
                android:textColor="@color/verde"
                />
            <TextView
                android:id="@+id/fecha_txt_r"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2023/12/12"
                android:background="@drawable/snipper1"
                android:backgroundTint="#C6EDF1"
                android:layout_marginTop="-3dp"
                android:layout_marginStart="2dp"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/verde"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >



                <TextView
                    android:id="@+id/fecha_txt_rn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColor="#B71C1C"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="38dp"
                    android:text="2023/12/122023/12/12"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="21dp"
                    android:textColor="#B7A21C"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="3dp"
                    android:text="🟨"

                    />
            </RelativeLayout>
        </LinearLayout>

<!-- 🟥🟧🟨🟩🟦🟪⬛️⬜️🟫-->


        <TextView
            android:id="@+id/local_txt_r"
            android:layout_width="wrap_content"
            android:textSize="30dp"
            android:textColor="#E53935"
            android:layout_marginStart="0dp"
            android:layout_height="wrap_content"
            android:text="CONTABILIDAD"
            android:textStyle="bold"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/motivo_txt_r"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Asistente contable"
                android:background="@drawable/snipper1"
                android:backgroundTint="#FDD835"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:textSize="16dp"
                android:layout_marginStart="0dp"
                android:layout_alignParentRight="true"

                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/skill_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="#C2BFC6"
                    android:layout_alignParentLeft="true"
                    android:layout_marginStart="50dp"
                    android:text="Base de datos, xml, java, Android Studio" />

                <TextView
                    android:id="@+id/estado_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColor="#4A148C"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="20dp"
                    android:text="INICIADO" />

            </RelativeLayout>

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="  Participantes 👨‍💼  "
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/snipper1"
                android:backgroundTint="@color/teal_700"
                android:textSize="18dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/horas_txt"
                android:layout_marginTop="10dp"
                android:text="24"
                android:layout_marginStart="160dp"
                android:textStyle="bold"
                android:textSize="25dp"
                />

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible" />



            <Button
                android:id="@+id/btn_iniciar"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="300dp"
                android:background="@drawable/snipper1"
                android:text=" INICIAR "
                android:textColor="@color/gray"
                android:textSize="15dp" />

            <Button
                android:id="@+id/btn_detalle"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="160dp"
                android:background="@drawable/snipper1"
                android:text=" DETALLE "
                android:textColor="@color/gray"
                android:textSize="15dp" />

        <Button
            android:layout_width="wrap_content"
            android:id="@+id/btn_finalizar"
            android:layout_height="50dp"
            android:text="FINALIZAR"
            android:layout_marginTop="0dp"
            android:textColor="#F4EFEF"
            android:layout_alignParentRight="true"
            android:textSize="15dp"
            android:background="@drawable/snipper1"
            android:layout_marginEnd="15dp"
            />

        </RelativeLayout>


    </LinearLayout>
</LinearLayout>