<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Promotor.Fragments.FragmentTab1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="30dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="0dp"
                >
               <!--android:gravity="center_vertical|center_horizontal"-->
                <!-- android:gravity="center_horizontal"-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_margin="10dp"
                        android:hint="DISTRIBUIDOR"
                        android:textSize="4sp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                        >

                        <AutoCompleteTextView
                            android:id="@+id/distribuidor_txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:textSize="12sp"
                            android:background="@drawable/snippervo"
                            />

                    </com.google.android.material.textfield.TextInputLayout>


                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <!--  fin escabezado de la vista-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >




                <LinearLayout
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    >

                    <EditText
                        android:id="@+id/cliente_txt"
                        android:layout_width="match_parent"
                        android:padding="5dp"
                        android:textSize="14dp"
                        android:hint="CLIENTE"
                        android:layout_height="wrap_content"
                        android:background="@drawable/snippervo"
                        android:inputType="textCapCharacters"
                        android:drawableStart="@drawable/baseline_account_circle_24"
                        android:drawableLeft="@drawable/baseline_account_circle_24" />
                </LinearLayout>





                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    >
                    <EditText
                        android:id="@+id/telefono_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="6dp"
                        android:textSize="14sp"
                        android:hint="TELÉFONO"
                        android:inputType="number"
                        android:background="@drawable/snippervo"
                        android:layout_alignParentRight="true"
                        android:drawableStart="@drawable/baseline_local_phone_24"
                        android:drawableLeft="@drawable/baseline_local_phone_24" />
                </LinearLayout>




            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                >
                <EditText
                    android:layout_width="match_parent"
                    android:padding="5dp"
                    android:id="@+id/direccion_txt"
                    android:textSize="14dp"
                    android:hint="DIRECCIÓN"
                    android:inputType="textCapCharacters"
                    android:layout_height="wrap_content"
                    android:background="@drawable/snippervo"
                    android:drawableStart="@drawable/baseline_add_location_24"
                    android:drawableLeft="@drawable/baseline_add_location_24" />
            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp">
                <EditText
                    android:layout_width="170dp"
                    android:padding="5dp"
                    android:layout_marginTop="3dp"
                    android:id="@+id/nombre_co"
                    android:textSize="14dp"
                    android:hint="NOMBRE COMERCIAL"
                    android:layout_height="45dp"
                    android:inputType="textCapCharacters"
                    android:layout_gravity="center"
                    android:background="@drawable/snippervo"
                    android:drawableStart="@drawable/baseline_store_24"
                    android:drawableLeft="@drawable/baseline_store_24" />


                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_margin="10dp"
                        android:hint="CATEGORIA"
                        android:textSize="4sp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                        >

                        <AutoCompleteTextView
                            android:id="@+id/categoria_txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:layout_gravity="center"
                            android:textSize="12sp"
                            android:background="@drawable/snippervo"
                            />

                    </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PRODUCTOS"
                android:textSize="12dp"
                android:textStyle="bold"
                />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginTop="10dp"
            >

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/mypolvos"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp">

            <CheckBox
                android:id="@+id/exhibidor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="EXHIBIDOR"
                android:textSize="10dp"
                android:checked="false" />

            <CheckBox
                android:id="@+id/pop"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="POP"
                android:textSize="10dp"
                android:layout_marginEnd="10dp"
                android:checked="false"
                android:layout_marginRight="10dp" />

        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">

            <ImageButton
                android:id="@+id/btnSumar"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/baseline_add_box_24" />

            <!-- Alinear el EditText al centro horizontalmente -->
            <EditText
                android:id="@+id/ventas_txt"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toStartOf="@id/preguntas_txt"
                android:layout_toEndOf="@id/btnSumar"
                android:background="@drawable/snippervo"
                android:drawableStart="@drawable/baseline_monetization_on_24"
                android:hint="VENTAS S/."
                android:inputType="numberDecimal"
                android:padding="10dp"
                android:textSize="14sp" />

            <ImageButton
                android:id="@+id/preguntas_txt"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="50dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:backgroundTint="#EAE9EF"
                android:src="@drawable/baseline_quiz_24" />
        </RelativeLayout>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            >
            <EditText
                android:layout_width="match_parent"
                android:height="50dp"
                android:layout_marginTop="20dp"
                android:padding="5dp"
                android:id="@+id/observaciones_txt"
                android:textSize="12dp"
                android:hint="OBSERVACIONES"
                android:layout_height="wrap_content"
                android:background="@drawable/snippervo"
                />

            <Button
                android:id="@+id/btn_guardar_acompa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="GUARDAR REPORTE"
                android:inputType="textCapCharacters"
                />
        </LinearLayout>

    </LinearLayout>



</androidx.core.widget.NestedScrollView>